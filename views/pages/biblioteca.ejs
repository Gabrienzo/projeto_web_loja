<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>9EM - Biblioteca</title>
    <link rel="stylesheet" href="styles/reset.css">
    <link rel="stylesheet" href="styles/styles.css">
</head>
<header class="cabecalho">
    <div class="container">
        <a href="/"> 
            <img src="assets/9EM.svg" alt="Logo da 9EM" class="loja_logo">
        </a>
    </div>
    <div class="container">
        <a href="/biblioteca" class="container__link"> 
            <img src="assets/favoritos.svg" alt="Sua Biblioteca" class="container__imagem">
            <p class="container__texto">Biblioteca</p>
        </a>
        <a href="/cart" class="container__link">
            <img src="assets/carrinho.svg" alt="Carrinho de compras" class="container__imagem">
            <p class="container__texto">Meu Carrinho</p>
        </a>
        <a href="/login" class="container__link">
            <img src="assets/perfil.svg" alt="Botão para acessar a pagina de login" class="container__imagem">
            <p class="container__texto">Perfil</p>
        </a>
    </div>
</header>
<body class="corpo">
    <section class="biblioteca_box">
        <div class="banner__pesquisa__container"><input type="search" class="banner__pesquisa" placeholder="Procure seu jogo aqui!"></div>
        <section class="categorias_biblioteca">
            <h1 class="biblioteca_titulo">Sua Biblioteca:</h1>
            <div class="categorias-menu">
                <h1 class="categorias_titulo">Categorias</h1>
                <input type="checkbox" id="menu" class="cb__botao">
                <label for="menu" class="cb__rotulo">
                    <span class="categoria__menu-hamburguer cb__imagem"></span>
                </label>
                <ul class="lista-menu">
                    <li class="lista-menu__item">
                        <a href="#" class="lista-menu__link">Ação</a>
                    </li>
                    <li class="lista-menu__item">
                        <a href="#" class="lista-menu__link">Aventura</a>
                    </li>
                    <li class="lista-menu__item">
                        <a href="#" class="lista-menu__link">Estratégia</a>
                    </li>
                    <li class="lista-menu__item">
                        <a href="#" class="lista-menu__link">FPS</a>
                    </li>
                    <li class="lista-menu__item">
                        <a href="#" class="lista-menu__link">RPG</a>
                    </li>
                </ul>
            </div>
            
        </section>
        <section class="biblioteca">
            <ul class="biblioteca_list">

                <% jogos.forEach(function(item) { %>
                <li class="biblioteca_item" id="biblioteca_item">
                    <div class="gameCard_biblioteca" id="gameCard_biblioteca">
                        <div class="cardTop">
                            <div class="cardImage"><img src="assets/<%= item.image %>" alt="capa do jogo"></div>
                            <div class="cardInfos">
                                <h3 class="gameName"><%= item.name %></h3>
                                <h3 class="gameDesc">Descrição:</h3>
                                <p class="gameDesc_long"><%= item.description %></p>
                            </div>
                        </div>
                        <div class="cardBotton">
                            <p class="cardTags"><%= item.tags %></p>
                        </div>
                    </div>
                </li>
                <% }) %>

            </ul>
        </section>
        <!-- <section class="pages">
            <a href="#" class="page_skipper"> &lt </a>
            <h1 class="page_text"> 1/3 </h1>
            <a href="#" class="page_skipper"> &gt </a>
        </section> -->
    </section>
    
</body>
<hr/ color="black">
<footer class="rodape">
    <h2 class="rodape_titulo"> Fale Conosco</h2>
</footer>

</html>